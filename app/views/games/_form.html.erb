<%= form_for @game do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>

    <%= f.label :release_date %>
    <%= f.text_field :release_date, :placeholder => 'DD-MM-YYYY' %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :platforms %>
    <%= f.text_field :platforms %>

    <%= f.label :average_game_time %>
    <%= f.text_field :average_game_time %>

    <%= f.submit %> 

    <% end %>